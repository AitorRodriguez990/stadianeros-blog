.st-SinglePagination{border-top:5px solid var(--c-gray);display:flex;flex-wrap:wrap;justify-content:center;margin-top:var(--m-large);padding:var(--p-default) 0;position:relative;text-align:center}.st-SinglePagination a{align-items:center;background-color:var(--c-white);border-radius:var(--b-radius);border:1px solid var(--c-border);display:flex;flex-direction:column;margin:var(--m-default);max-width:360px;transition:ease all var(--t-default)}.st-SinglePagination a:hover{box-shadow:0 0 8px rgba(0,0,0,.2);text-decoration:none;transition:ease all var(--t-default);transform:scale(var(--t-scale))}.st-SinglePagination-button{background-color:var(--c-white);color:var(--c-main);padding:var(--p-default);transition:var(--t-default);width:100%}.st-SinglePagination a:hover .st-SinglePagination-button{background-color:var(--c-main);color:var(--c-white);transition:var(--t-default)}.st-SinglePagination i{border:solid currentColor;border-width:0 2px 2px 0;display:inline-block;padding:3px;transform:rotate(135deg)}.st-SinglePagination i.is-right{transform:rotate(-45deg)}.st-SinglePagination .st-SinglePagination-image{height:120px;margin-bottom:var(--m-small);overflow:hidden;position:relative;width:100%}.st-SinglePagination .st-SinglePagination-image img{position:relative;top:-90px;width:100%}.st-SinglePagination .st-SinglePagination-title{color:var(--c-main);margin:0 0 var(--m-small);padding:0 var(--p-default)}.st-SinglePagination .st-SinglePagination-description{color:var(--c-text);font-size:14px;margin:0;padding:0 var(--p-default) var(--p-small)}