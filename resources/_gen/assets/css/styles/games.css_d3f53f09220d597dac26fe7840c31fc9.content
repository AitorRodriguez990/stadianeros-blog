.st-Games{align-items:stretch;display:flex;flex-wrap:wrap;justify-content:space-between}.st-Game{background-color:var(--c-white);border-radius:var(--b-radius);border:1px solid var(--c-border);color:var(--c-text);display:flex;flex-basis:100%;flex-grow:0;flex-shrink:0;margin-bottom:var(--m-default);position:relative;transition:ease-in box-shadow var(--t-default);min-width:calc(100%/3 - var(--m-small))}@media screen and (min-width:561px){.st-Game{display:block;flex-basis:30%;padding:var(--p-default)}}.st-Game-image{flex-basis:130px;flex-shrink:0;height:155px;overflow:hidden;position:relative;width:100%}.st-Game-image img{height:155px;left:-28px;position:relative;width:auto}@media screen and (min-width:561px){.st-Game-image{flex-basis:auto;flex-shrink:1;height:auto;margin-right:0;overflow:initial;width:100%}.st-Game-image img{height:auto;left:auto;position:initial;width:100%}}@media screen and (max-width:560px){.st-Game-content{padding:var(--p-small);overflow:hidden}}.st-Game-title{color:var(--c-main);display:block;font-size:18px;font-weight:600;overflow:hidden;padding-bottom:5px;position:relative;text-overflow:ellipsis;transition:ease all var(--t-default);white-space:nowrap;z-index:1}@media screen and (min-width:561px){.st-Game-title{margin-top:calc(var(--m-small)/2);padding:5px var(--p-small) 5px 0}}.st-Game-description{-webkit-box-orient:vertical;-webkit-line-clamp:5;display:-webkit-box;line-height:22px;overflow:hidden;text-overflow:ellipsis}.st-Game:hover{box-shadow:0 0 8px rgba(0,0,0,.2)}.st-Game-availability{bottom:0;left:0;text-align:center;position:absolute;right:0}@media screen and (max-width:560px){.st-Availability{border-radius:0;font-size:11px;width:100%}}@media screen and (min-width:561px){.st-Game-availability{bottom:var(--m-small);left:initial;right:var(--m-small)}}