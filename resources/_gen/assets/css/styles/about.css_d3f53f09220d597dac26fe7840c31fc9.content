:root{--image-size-desktop: 150px;--image-size-mobile: 80px}.st-About{list-style:none;padding:0}.st-About-item{align-items:flex-start;display:flex;margin:20px 0}@media screen and (min-width:560px){.st-About-item{align-items:center}}.st-About-itemImage{background-color:#fff;border:5px solid var(--c-gray);border-radius:20px;flex:0 0 var(--image-size-mobile);height:var(--image-size-mobile);margin-right:20px;overflow:hidden;width:var(--image-size-mobile)}@media screen and (min-width:560px){.st-About-itemImage{flex-basis:var(--image-size-desktop);height:var(--image-size-desktop);width:var(--image-size-desktop)}}.st-About-itemImage img{margin:0 auto;width:calc(var(--image-size-mobile) - 10px)}@media screen and (min-width:560px){.st-About-itemImage img{width:calc(var(--image-size-desktop) - 10px)}}.st-About-itemName{color:var(--c-main);font-size:20px;font-weight:400}.st-About-itemTitle{color:var(--c-secondary);font-weight:600}.st-About-itemTitle:before{content:"|";margin:0 var(--m-xsmall)}.st-About-itemDescription{color:var(--c-text);line-height:1.5;margin-top:var(--m-small)}